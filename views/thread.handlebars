{{>techblog-header}}

<main id="homepage_background" class="d-flex flex-column gap-4 flex-no-wrap overflow-scroll">
    <div class="post">
        <div class="d-flex justify-content-between align-items-end post_header">
            <h2 class="post_title"></h2>
            <h6 class="post_info"></h6>
        </div>
        <h3 class="post_description"></h3>
    </div>
    <div class="post">
        <div class="post_header">
        </div>
        <form class="post_description d-flex flex-column gap-3">
            <div class="d-flex flex-column">
                <label for=".commentInput">Comment</label>
                <textarea type="text" rows="3" class="commentInput"></textarea>
            </div>
            <input type="submit" id="submitCommentButton">
        </form>
    </div>
</main> 