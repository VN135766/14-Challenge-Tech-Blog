{{>techblog-header}}
<main id="homepage">
    <div>
        <h2>Edit Post</h2>
        <form>
            <div>
                <div>
                    <label for="#editTitle">Title</label>
                <input type="text" id="editTitle" value="{{post.title}}">
                </div>
                <div>
                   <label for="#editContent">Content</label>
                <textarea rows="3" id="editContent">{{post.description}}</textarea>
                </div>
            </div>
            <div>
                <input type="submit" id="updateButton" value="Update Post">

                <input type="submit" id="deleteButton" value="Delete">
            </div>
        </form>
    </div>
</main> 
</main>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>